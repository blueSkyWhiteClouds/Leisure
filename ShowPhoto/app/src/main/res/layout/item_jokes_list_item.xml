<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_big">

            <com.ysm.weibo.showphoto.views.CircleNetworkImageImage
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big"
                android:src="@mipmap/icon_1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_big">

                <TextView
                    android:id="@+id/jokes_list_item_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xxsmall"
                    android:text="蓝天"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/jokes_list_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:text="2016-06-06"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/jokes_list_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/margin_big"
            android:text="neiro"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/jokes_list_item_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_big"
            android:text="全文"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_big"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_big"
            android:background="@drawable/line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/jokes_list_item_praise_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/jokes_list_item_praise_iv"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@mipmap/icon_praise" />

                <TextView
                    android:id="@+id/jokes_list_item_praise_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_big" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jokes_list_item_share_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@mipmap/icon_share" />

                <TextView
                    android:id="@+id/jokes_list_item_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_big" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jokes_list_item_comments_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@mipmap/icon_comments" />

                <TextView
                    android:id="@+id/jokes_list_item_comments_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_big" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_big"
        android:layout_marginTop="@dimen/space_height" />
</LinearLayout>